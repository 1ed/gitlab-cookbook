# This file was generated by Chef for <%= node['fqdn'] %>
# Do not change this file by hand!

# GitLab user. git by default
user: <%= node['gitlab']['user'] %>

# Url to gitlab instance. Used for api calls. Should be ends with slash.
gitlab_url: "<%= node['gitlab']['use_https'] ? 'https' : 'http' %>://<%= node['gitlab']['host'] %>/"

http_settings:
#  user: someone
#  password: somepass
  self_signed_cert: true

# Repositories path
repos_path: "<%= node['gitlab_shell']['repositories'] %>"

# File used as authorized_keys for gitlab user
auth_file: "<%= node['gitlab']['user_home'] %>/.ssh/authorized_keys"

# Redis settings used for pushing commit notices to gitlab
redis:
<% node['gitlab_shell']['redis_config'].each_pair do |key, value| %>
<%= "  #{key}: '#{value}'" %>
<% end %>
